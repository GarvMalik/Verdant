<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="Back"
            android:textColor="#333"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/createNewPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/create_new_password" />

    <TextView
        android:id="@+id/textMain"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Reset password"
        android:textColor="#333"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textSec"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/rubik_regular"
        android:textStyle=""
        android:text="Your new password must be differenet from previous used password."
        android:textColor="#777"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/newPassword"
        android:layout_width="360dp"
        android:layout_height="50dp"
android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_border"
        android:fontFamily="@font/rubik_regular"
        android:hint="Password"
        android:paddingStart="10dp"
        android:textSize="22sp"
        android:autofillHints="password"
        android:inputType="textVisiblePassword" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="#666"
        android:fontFamily="@font/rubik_regular"
        android:textSize="16dp"
        android:text="Both password must match."/>

    <EditText
        android:id="@+id/reNewPassword"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_border"
        android:fontFamily="@font/rubik_regular"
        android:hint="Confirm Password"
        android:paddingStart="10dp"
        android:textSize="22sp"
        android:autofillHints="password"
        android:inputType="textVisiblePassword" />
    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="#666"
        android:fontFamily="@font/rubik_regular"
        android:textSize="16dp"
        android:text="Both password must match."/>


    <Button
        android:id="@+id/letsStart"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/rubik_medium"
        android:letterSpacing="-0.001"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="28sp"
        app:background="@drawable/round_corner_border"
        />



</LinearLayout>
