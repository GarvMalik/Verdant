<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Back"
                android:textColor="#333"
                android:textSize="20dp" />
        </LinearLayout>

    <ImageView
        android:id="@+id/workerImageCreatePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/check_email" />

    <TextView
        android:id="@+id/textMain"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Check Your Email"
        android:textAlignment="center"
        android:textColor="#333"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textSec"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/rubik_regular"
        android:textStyle=""
        android:text="We have sent a password recover instructions to your email."
        android:textColor="#777"
        android:textSize="23sp"
        android:textAlignment="center"/>



        <Button
            android:id="@+id/letsStart"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/theme_green"
            android:fontFamily="@font/rubik_medium"
            android:letterSpacing="-0.001"
            android:text="Open Email App"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="28sp"
            app:background="@drawable/round_corner_border"
            />

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="150dp"
        android:text="Did not recieve the email? Check your spam filter."
        android:textAlignment="center"/>


    </LinearLayout>

