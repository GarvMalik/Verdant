<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/workerImageCreatePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:scaleType="centerCrop"
        android:src="@drawable/lets_start"
        android:tint="@color/black_light_transparent"

        tools:ignore="UseAppTint" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/company_logo"
        tools:ignore="ImageContrastCheck,ImageContrastCheck" />


    <TextView
        android:id="@+id/textMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Create Better Together."
        android:textColor="#fff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Join our community"
        android:textColor="#fff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/letsStart"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:background="@drawable/round_style"
        android:fontFamily="@font/rubik_bold"
        android:letterSpacing="-0.001"
        android:text="Let's Start"
        android:textColor="#fff"
        android:textSize="30sp"
        app:backgroundTint="#2CB530"></Button>

        <Button
            android:layout_marginTop="600dp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:letterSpacing="-0.001"
            android:fontFamily="@font/rubik_bold"
            android:background="@drawable/round_style"
            app:backgroundTint="#fff"
            android:gravity="center"
            android:text="Sign In"
            android:layout_centerHorizontal="true"
            android:textColor="#2CB530"
            android:textSize="30sp" >
        </Button>


</RelativeLayout>