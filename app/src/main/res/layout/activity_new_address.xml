<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/theme_green"

    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
         android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@drawable/back_arrow_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Back"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>






    <TextView
        android:id="@+id/textMain"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/rubik_bold"
        android:text="New Address"
        android:textColor="#333"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textSec"
        android:textAlignment="center"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/rubik_regular"
        android:textStyle=""
        android:text="Please enter your current address."
        android:textColor="@color/regular_grey"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/newPassword"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_border"
        android:fontFamily="@font/rubik_regular"
        android:hint="Street address,city"
        android:paddingStart="10dp"
        android:textSize="22sp"
        android:autofillHints="postalAddress"
        android:inputType="text"  />


    <EditText
        android:id="@+id/reNewPassword"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_border"
        android:fontFamily="@font/rubik_regular"
        android:hint="Apt.State, Bldg#"
        android:paddingStart="10dp"
        android:textSize="22sp"
        android:autofillHints="postalAddress"
        android:inputType="text" />
    <EditText
        android:id="@+id/pinCode"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_border"
        android:fontFamily="@font/rubik_regular"
        android:hint="Postal Code"
        android:paddingStart="10dp"
        android:textSize="22sp"
        android:autofillHints="postalCode"
        android:inputType="number" />




    <ImageView
        android:id="@+id/createNewPassword"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/new_address" />
    <Button
        android:id="@+id/letsStart"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/rubik_medium"
        android:letterSpacing="-0.001"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="28sp"
        app:background="@drawable/round_corner_border"
        />


</LinearLayout>
